@{
    ViewData["Title"] = "Home Page";
    List<Products> productList = ViewBag.productList;
    string keyword = ViewBag.keyword;
}
<form action="Search">
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <input class="form-control" placeholder="Search Software" name="keyword" value="@keyword" >
        </div>
    </div>
</div>
</form>
<div class="card-group">
    <div class="container">
        <div class="row mt-3">

            @if(productList.Count!=0)
            {
            @foreach(Products product in productList)
                {
                    <div class="col-md-4 mt-4">
                        <div class="card w-75">
                             <img src="@product.ProductImg" class="card-img img-ratio" alt="...">
                                 <div class="card-body">
                                     <h5 class="card-title">@product.ProductName</h5>
                                     <p class="card-text ellipse-text">@product.ProductDescription</p>
                                  </div>
                                <div class="card-footer">
                                     <small class="fs-4 text-black me-2">@product.ProductPrice$</small>
                                     <small class="fs-6 text-black">@product.ProductRating☆</small>
                                     <button type="button" class="btn btn-primary float-end" data-bs-toggle="button" autocomplete="off" aria-pressed="true">Add to Cart</button>          
                                </div>
                         </div>
                    </div>
                }
            }
            else
            {
                <h1>No Data Matched</h1>
            }

     
        </div>
    </div>
</div>


